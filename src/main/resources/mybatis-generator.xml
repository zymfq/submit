<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--<classPathEntry location="/Program Files/IBM/SQLLIB/java/db2java.zip" />-->
    <!--mysql 连接数据库jar 这里选择自己本地位置-->
    <!-- <classPathEntry location="C:\Res\mysql\mysql-connector-java\5.1.21\mysql-connector-java-5.1.21.jar" />
     -->



    <!--targetRuntime="MyBatis3Simple":生成简单版的CRUD;MyBatis3:豪华版 -->

    <!--数据库链接地址账号密码-->
    <context id="DB2Tables" targetRuntime="MyBatis3">

        <!-- 是否去除自动生成的注释 true:是 ; false:否 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/experimental_report?characterEncoding=utf8&amp;useSSL=true&amp;serverTimezone=UTC"
                        userId="root"
                        password="123">
        </jdbcConnection>


        <!-- 默认false,把JDBC DECIMAL和 NUMERIC 类型解析为 Integer ,true
            把JDBC DECIMAL和 NUMERIC类型解析为java.math.BigDecimal -->
        <!--<javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>-->

        <!--生成Model类存放位置-->
        <javaModelGenerator targetPackage="com.zym.submit.entity" targetProject="src/main/java">
            <!-- enableSubPackages: 当没有创建路径的时候会默认的创建路径 路径就是targetPackage -->
            <property name="enableSubPackages" value="true" />
            <!--从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!--生成映射文件存放的位置-->
        <!-- targetProject:mapper映射文件生成的位置
          如果maven工程只是单独的一个工程，targetProject="src/main/java"
          若果maven工程是分模块的工程，targetProject="所属模块的名称"，例如：
          targetProject="ecps-manager-mapping"，下同-->

        <sqlMapGenerator targetPackage="mapping"  targetProject="src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!--生成Dao类的存放位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.zym.submit.mapper"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!--生成对应表及类名-->
        <!--<table  tableName="class" domainObjectName="Class" ></table>
        <table  tableName="college" domainObjectName="College" ></table>
        <table  tableName="course" domainObjectName="Course" ></table>
        <table  tableName="grade" domainObjectName="Grade" ></table>
        <table  tableName="report" domainObjectName="Report" ></table>
        <table  tableName="teacher" domainObjectName="Teacher" ></table>
        <table  tableName="term" domainObjectName="Term" ></table>
        <table  tableName="student" domainObjectName="Student" ></table>-->
        <table  tableName="task_notice" domainObjectName="TaskNotice" ></table>
    </context>
</generatorConfiguration>
